---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/base.css"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dose is the author of dose3, a bestselling sci-fi book series. On his portfolio website, you can find his latest works, blog posts, and contact information. Visit doseâ€™s portfolio website today and discover his amazing stories and insights." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/stack/dose3s.png" />
		<meta name="keywords" content="dose,book,fiction,dose3,dxse,blog">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-secondary">
		<slot />
	</body>
</html>
<style is:global>
	*{
		scroll-behavior: smooth;
	}
	body{
		width: 100vw;
		overflow-x: hidden;
		color: white;
	}
	::-webkit-scrollbar{
		width: 0px;
		background: var(--color-secondary);
	}
	::-webkit-scrollbar-thumb{
		background-color: white;
	}
	h1{
        font-size: 38px;
        margin: 0 auto;
        font-weight: 800;
        margin-bottom: 10px;
    }
</style>
