---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="hi im dose this is my portfolio website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900">
		<slot />
	</body>
</html>
<style is:global>
	*{
		scroll-behavior: smooth;
	}
	body{
		width: 100vw;
		overflow-x: hidden;
		background-color: black;
		color: white;
	}
	::-webkit-scrollbar{
		width: 10px;
		border-left: 1px solid #313131;
	}
	::-webkit-scrollbar-thumb{
		background-color: #313131;
	}
	h1{
        font-size: 38px;
        margin: 0 auto;
        font-weight: 800;
        margin-bottom: 10px;
    }
</style>
