    }
    .stack{
        width: 100%;
        min-height: 160px;
        border: 1px solid var(--color-line);
        position: relative;
        .logo{
            position: absolute;
            top: -15px;
            border: 1px solid var(--color-line);
            width: fit-content;
            height: 30px;
            padding: 0 30px;
            left: 15px;
            border-radius: 15px;
        }
        img{
